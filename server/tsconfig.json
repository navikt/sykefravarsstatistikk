{
    "compilerOptions": {
        "outDir": "build",
        "module": "esnext",
        "target": "es2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}
